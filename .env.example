# ============================================
# BizFlow Environment Configuration
# ============================================
# Copy this file to .env and update values
# NEVER commit .env to version control
# ============================================

# ============================================
# DATABASE - MySQL (Transactional)
# ============================================
MYSQL_ROOT_PASSWORD=bizflow_root_2024
MYSQL_DATABASE=bizflow
MYSQL_USER=bizflow_user
MYSQL_PASSWORD=bizflow_pass_2024
MYSQL_PORT=3306

# ============================================
# DATABASE - PostgreSQL (Reporting)
# ============================================
POSTGRES_DB=bizflow_reports
POSTGRES_USER=bizflow_user
POSTGRES_PASSWORD=bizflow_pass_2024
POSTGRES_PORT=5432

# ============================================
# CACHE - Redis
# ============================================
REDIS_PASSWORD=bizflow_redis_2024
REDIS_PORT=6379

# ============================================
# VECTOR DB - ChromaDB
# ============================================
CHROMADB_PORT=8000

# ============================================
# APPLICATION
# ============================================
BACKEND_PORT=8080
FRONTEND_PORT=3000
ENVIRONMENT=development
DEBUG=true

# ============================================
# SECURITY - JWT
# ============================================
# IMPORTANT: Change this in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ============================================
# AI PROVIDER
# ============================================
# Options: mock, openai, gemini
AI_PROVIDER=mock

# OpenAI Configuration (if AI_PROVIDER=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Gemini Configuration (if AI_PROVIDER=gemini)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# ============================================
# CORS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# FRONTEND
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NODE_ENV=development

# ============================================
# MOBILE (Flutter)
# ============================================
MOBILE_API_URL=http://localhost:8080
FIREBASE_PROJECT_ID=
FIREBASE_API_KEY=

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# PERFORMANCE
# ============================================
MAX_CONNECTIONS=100
POOL_SIZE=20
POOL_TIMEOUT=30

# ============================================
# BUSINESS RULES
# ============================================
# Maximum items per order
MAX_ORDER_ITEMS=100

# Default currency
DEFAULT_CURRENCY=VND

# Tax rate (%)
DEFAULT_TAX_RATE=10

# Low stock threshold
LOW_STOCK_THRESHOLD=10

# Debt warning threshold (VND)
DEBT_WARNING_THRESHOLD=10000000
